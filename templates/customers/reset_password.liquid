{{ 'section-account-reset.css' | asset_url | stylesheet_tag }}

<div class="page-content-wrapper">
     <div class="page-content reset-wrapper">
          <h2>{{ 'customer.reset_password.title' | t }}</h2>
          {% form 'reset_customer_password' %}

               {{ form.errors | default_errors }}

               <label for="password" class="hidden">{{ 'customer.reset_password.password' | t }}</label>
               <input type="password"
               name="customer[password]"
               id="password"
               autocomplete="new-password"
               placeholder="{{ 'customer.reset_password.password' | t }}" required/>

               <label for="password_confirmation" class="hidden">{{ 'customer.reset_password.password_confirm' | t }}</label>
               <input type="password"
               name="customer[password_confirmation]"
               id="password_confirmation"
               autocomplete="new-password"
               placeholder="{{ 'customer.reset_password.password_confirm' | t }}" required/>

               <div class="form-submit-center">
                    <button type="submit" class="btn">{{ 'customer.reset_password.submit' | t }}</button>
               </div>
          {% endform %}
     </div>
</div>