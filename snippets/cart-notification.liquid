{% comment %}
Renders cart notification

Accepts:
- color_scheme: {String} sets the color scheme of the notification (optional)

Usage:
{% render 'cart-notification' %}
{% endcomment %}

<cart-notification>
     <div class="overlay"></div>
     <div class="cart-notification-wrapper">
          <div id="cart-notification" class="cart-notification focus-inset" aria-modal="true" aria-label="{{ 'general.cart.item_added' | t }}" role="dialog" tabindex="-1">
               <div class="cart-notification__header">
                    <h2 class="cart-notification__heading caption-large">{%- render 'icon-checkmark' -%}
                         {{ 'general.cart.item_added' | t }}</h2>
                    <button type="button"
                         class="cart-notification-close"
                         aria-label="{{ 'accessibility.close' | t }}">
                         <i class="mdi mdi-close"></i>
                    </button>
               </div>
               <div id="cart-notification-product" class="cart-notification-product"></div>
               <div class="cart-notification__links">
                    <a href="{{ routes.cart_url }}" id="cart-notification-button"
                         class="btn trans"></a>
                    <form action="{{ routes.cart_url }}" method="post" id="cart-notification-form">
                         <button class="btn" name="checkout">{{ 'sections.cart.checkout' | t }}</button>
                    </form>
                    <a type="button" class="link">{{ 'general.continue_shopping' | t }}</a>
               </div>
          </div>
     </div>
</cart-notification>
{% style %}
.cart-notification {
     display: none;
}
{% endstyle %}