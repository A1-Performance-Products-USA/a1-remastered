{{ 'section-catalogs.css' | asset_url | stylesheet_tag }}

{% if section.blocks.size > 0 %}
     <div class="catalogs-wrapper">
          {% for block in section.blocks %}
               <div class="catalog-item">
                    <a href="{{ block.settings.link }}" target="_blank">
                         <img src="{{ block.settings.image | img_url: '310x' }}" loading="lazy">
                    </a>
               </div>
          {% endfor %}
     </div>
{% else %}
     <div class="catalogs-wrapper">
          <h3 class="no-catalogs">{{ 'catalogs.no_catalogs' | t }}</h3>
     </div>
{% endif %}

<style>
     .catalogs-wrapper {
          background: url('{{ section.settings.bg | img_url: "master" }}') center no-repeat transparent;
     }
</style>

{% schema %}
     {
          "name": "Catalogs list",
          "class": "page-content catalogs-section",
          "max_blocks": 20,
          "settings": [
               {
                    "type": "text",
                    "id": "addclass",
                    "label": "Add Class",
                    "default": "catalogs"
               },
               {
                    "type": "image_picker",
                    "id": "bg",
                    "label": "Background Image"
               }
          ],
          "blocks": [
               {
                    "type": "catalog_item",
                    "name": "Catalog",
                    "settings": [
                         {
                              "type": "image_picker",
                              "id": "image",
                              "label": "Image"
                         },
                         {
                              "type": "url",
                              "id": "link",
                              "label": "Link",
                              "info": "Download URL"
                         }
                    ]
               }
          ],
          "presets": [
               {
                    "name": "Catalogs list",
                    "category": "Image",
                    "blocks": [
                         {
                              "type": "catalog_item"
                         }
                    ]
               }
          ]
     }
{% endschema %}