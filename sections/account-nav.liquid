<div class="account-nav">
     <div class="nav-header">
          <a class="title" href="{{ routes.account_url }}">
               <span class="icon">
                    <i class="mdi {{ section.settings.titleIcon }}"></i>
               </span>
               <h1>{{ section.settings.title }}</h1>
          </a>
          <p>{{ 'customer.account.account_nav_help' | t }}</p>
     </div>
     <ul class="nav-list">
          {% for block in section.blocks %}
               <li>
                    <a href="{{ block.settings.link_page }}" class="{% if link.active %}active{% endif %}">
                         <i class="mdi {{ block.settings.icon }}"></i>
                         <span>{{ block.settings.title }}</span>
                    </a>
               </li>
          {% endfor %}
     </ul>
</div>

<style>
     .account-nav > .nav-header > .title > .icon {
          background-color: {{section.settings.header_link_clr}};
          -webkit-transition: all 0.3s ease-in-out;
          -moz-transition: all 0.3s ease-in-out;
          -ms-transition: all 0.3s ease-in-out;
          -o-transition: all 0.3s ease-in-out;
          transition: all 0.3s ease-in-out;
     }
     .account-nav > .nav-header > .title:hover > .icon {
          background-color: {{section.settings.header_link_hvr_clr}};
     }


     .account-nav > .nav-header > .title > .icon > i {
          color: {{section.settings.header_icon_clr}};
          -webkit-transition: all 0.3s ease-in-out;
          -moz-transition: all 0.3s ease-in-out;
          -ms-transition: all 0.3s ease-in-out;
          -o-transition: all 0.3s ease-in-out;
          transition: all 0.3s ease-in-out;
     }

     .account-nav > .nav-header > .title:hover > .icon > i {
          color: {{section.settings.header_icon_hvr_clr}};
     }

     .account-nav > .nav-header > .title > h1,
     .account-nav > .nav-list > li > a {
          color: {{section.settings.header_link_clr}};
          -webkit-transition: all 0.3s ease-in-out;
          -moz-transition: all 0.3s ease-in-out;
          -ms-transition: all 0.3s ease-in-out;
          -o-transition: all 0.3s ease-in-out;
          transition: all 0.3s ease-in-out;
     }

     .account-nav > .nav-header > .title:hover > h1 {
          color: {{section.settings.header_link_hvr_clr}};
     }


     .account-nav > .nav-list > li > a {
          color: {{section.settings.nav_link_clr}};
          -webkit-transition: all 0.3s ease-in-out;
          -moz-transition: all 0.3s ease-in-out;
          -ms-transition: all 0.3s ease-in-out;
          -o-transition: all 0.3s ease-in-out;
          transition: all 0.3s ease-in-out;
     }

     .account-nav > .nav-list > li:hover > a,
     .account-nav > .nav-list > li.active > a {
          color: {{section.settings.nav_link_hvr_clr}};
     }
</style>

{% schema %}
{
     "name": "Account Navigation",
     "class": "account-nav-wrapper page-content",
     "settings": [
          {
               "type": "text",
               "id": "title",
               "label": "Navigation Title",
               "default": "Account Menu",
               "placeholder": "Account Menu"
          },
          {
               "type": "text",
               "id": "titleIcon",
               "label": "Title Icon",
               "default": "mdi-account",
               "placeholder": "mdi-account"
          },
          {
               "type": "color",
               "id": "header_link_clr",
               "label": "Header Text Color",
               "default": "#111"
          },
          {
               "type": "color",
               "id": "header_link_hvr_clr",
               "label": "Header Text Hover Color",
               "default": "#C00"
          },
          {
               "type": "color",
               "id": "header_icon_clr",
               "label": "Header Icon Color",
               "default": "#111"
          },
          {
               "type": "color",
               "id": "header_icon_hvr_clr",
               "label": "Header Icon Hover Color",
               "default": "#C00"
          },
          {
               "type": "color",
               "id": "nav_link_clr",
               "label": "Link Color",
               "default": "#444"
          },
          {
               "type": "color",
               "id": "nav_link_hvr_clr",
               "label": "Link Hover Color",
               "default": "#111"
          }
     ],
     "blocks": [
          {
               "type": "account_link",
               "name": "Account Link",
               "settings": [
                    {
                         "type": "text",
                         "id": "title",
                         "label": "Link Title"
                    },
                    {
                         "type": "url",
                         "id": "link_page",
                         "label": "Link Page"
                    },
                    {
                         "type": "text",
                         "id": "icon",
                         "label": "Icon"
                    }
               ]
          }
     ]
}
{% endschema %}
